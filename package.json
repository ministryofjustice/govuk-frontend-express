{
  "name": "moj-express-skeleton",
  "version": "0.0.0",
  "private": true,
  "main": "public/app.js",
  "type": "module",
  "scripts": {
    "start": "node public/app.js",
    "build": "node esbuild.js",
    "dev": "nodemon --watch src & npm run scss & npm run js & npm run assets && node start-server.js",
    "dev-new": "nodemon --watch src --ext js,scss --exec 'node start-server.js'",
    "scss": "sass --watch src/scss/main.scss public/stylesheets/application.min.css --style=compressed",
    "js": "cp -R node_modules/govuk-frontend/dist/govuk/govuk-frontend.min.js* public/javascripts",
    "assets": "cp -R node_modules/govuk-frontend/dist/govuk/assets/ public/assets"
  },
  "engines": {
    "node": "20.15.1"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "body-parser": "^1.20.2",
    "builtin-modules": "^4.0.0",
    "chokidar": "^3.6.0",
    "compression": "^1.7.4",
    "connect-livereload": "^0.6.1",
    "cookie-parser": "~1.4.4",
    "debug": "~4.3.5",
    "dotenv": "^16.4.5",
    "esbuild": "^0.24.0",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint-plugin-jsdoc": "^48.7.0",
    "express": "^4.21.0",
    "express-rate-limit": "^7.3.1",
    "express-session": "^1.18.0",
    "express-validator": "^7.1.0",
    "govuk-frontend": "^5.4.0",
    "helmet": "^7.1.0",
    "http-errors": "~1.6.3",
    "livereload": "^0.9.3",
    "morgan": "~1.9.1",
    "nunjucks": "^3.2.4",
    "rimraf": "^6.0.1",
    "sass": "^1.77.8",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "eslint": "^9.7.0",
    "globals": "^15.8.0",
    "middleware-axios": "^2.1.6",
    "nodemon": "^3.1.3"
  }
}